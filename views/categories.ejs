<!-- EJS Template -->

<h1 class="pb-4">Explore Categories</h1>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/categories">Categories</a></li>
        <li class="breadcrumb-item active" aria-current="page">Explore Categories</li>
    </ol>
</nav>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 mb-4">
    <% if (typeof categoryById !== 'undefined' && categoryById.length > 0) { %>
        <% categoryById.forEach(function (category, index) { %>
            <a href="/recipe/<%- category._id %>" class="col-12 col-sm-6 col-md-4 col-lg-3 text-center category_link">
                <div class="category_img shadow">
                        <img src="/img/<%- category.image %>" alt="<%- category.name %>" width="266" height="208">
                </div>
                <div class="pt-1"><%- category.name %></div>
            </a>
        <% }) %>
    <% } %>
</div>
  
